<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".video2">

    <SurfaceView
        android:id="@+id/Surface_View"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_retroceder2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/retroceder1"
            android:contentDescription="@string/retroceder"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/btn_pause2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/pausa"
            android:contentDescription="@string/btnpausa"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/btn_play2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/play"
            android:contentDescription="@string/btnplay"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/btn_detener2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/detener"
            android:contentDescription="@string/btndetener"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/btn_adelantar2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/adelantar"
            android:contentDescription="@string/adelantar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_regresar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/regresar" />

</LinearLayout>